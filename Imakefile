LOCALLIB = libsuds.a

#if SystemV4
LIBS = $(LIBRDSSGRAPH) $(LIBRDSSUI) $(LIBRDSSUTIL) $(LIBNETCDF) $(XLIBS) $(SUNVIEWLIBS) -lgen
#else
LIBS = $(LIBRDSSGRAPH) $(LIBRDSSUI) $(LIBRDSSUTIL) $(LIBNETCDF) $(XLIBS) $(SUNVIEWLIBS)
#endif

INCLUDES = $(XINCLUDES) $(NETCDFINCLUDES)

EXTRA_DEFINES = -DLOADFILE=\"$(LIBDIR)/suds.lf\" -DHELPDIR=\"$(RDSSDIR)/suds/help\" $(NETCDFFLAG)


BINSRCS = suds.c

LIBOBJS= analyze.o cape.o class.o color.o contour.o convert.o \
	drexel.o edit.o eformat.o fgge.o fields.o flags.o fld_derive.o \
	foote.o gale.o hodograph.o init_globals.o interpolate.o jaws.o \
	mist.o ncar.o netcdf.o nmc.o noaa.o nssl.o nws.o output.o \
	rsanal.o skewt.o sounding.o util.o windstep.o xsect.o xyplot.o

LIBSRCS = $(LIBOBJS:.o=.c)

SRCS= 	$(BINSRCS) $(LIBSRCS) 

LOCALHEADERS= color.h fields.h flags.h globals.h keywords.h sounding.h version.h

DISTFILES = Imakefile Makefile suds.state suds.menu $(SRCS) $(LOCALHEADERS)

AllTarget ($(LIBOBJS))

NormalLibraryTarget ($(LOCALLIB), $(LIBOBJS))

NormalProgramTarget (suds,suds.o $(LIBOBJS),$(DEPLIBS),$(LIBS),$(SYSLIBS))

UICppLoadFileTarget_1(suds.lf,suds.state,make-lf,suds.i,suds.menu keywords.h)

DependTarget()

xsaber:	$(LIBOBJS)
	# load $(CFLAGS) $(LIBOBJS) $(LIBRDSSUTIL) $(LIBRDSSUI) $(LIBRDSSGRAPH) $(XLIBS) $(TERMCAPLIB) $(MATHLIB) $(LIBNETCDF) $(SUNVIEWLIBS)

LintTarget()

DistfilesTarget($(DISTFILES))

